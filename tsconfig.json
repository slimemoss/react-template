{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2021",
    "module": "es2020",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
